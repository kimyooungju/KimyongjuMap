<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/info_window_background"
    android:padding="12dp"
    android:elevation="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/foodTitle"
                android:layout_width="230px"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="음식점："
                android:textSize="14dp" />

            <TextView
                android:id="@+id/getFoodTitle"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center"
                android:hint="등록되지 않은 음식점입니다."
                android:textSize="14dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="#808080" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/foodAddress"
                android:layout_width="230px"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="주소："
                android:textSize="14dp" />

            <TextView
                android:id="@+id/getFoodAddress"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:hint="등록되지 않은 음식점입니다."
                android:textSize="14dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="#808080" />

        <LinearLayout
            android:layout_width="950px"
            android:layout_height="wrap_content"
            android:elevation="12dp">

            <TextView
                android:id="@+id/foodCategory"
                android:layout_width="230px"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="카테고리："
                android:textSize="14dp" />

            <TextView
                android:id="@+id/getFoodCategory"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:hint="등록되지 않은 음식점입니다."
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="950px"
            android:layout_height="wrap_content"
            android:elevation="12dp">

            <Button
                android:id="@+id/buttonBookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="북마크 추가/제거" />

            <Button
                android:id="@+id/buttonViewReviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="리뷰 보기" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
